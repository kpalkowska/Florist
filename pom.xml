					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>zuzanna</id>
			<properties>
				<active.profile>zuzanna</active.profile>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>properties-maven-plugin</artifactId>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>


